<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFF"
    android:paddingBottom="20dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/jobTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/jobDateTextView"
        android:text="@string/jobTitleText"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/jobCompanyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobTitleTextView"
        android:text="@string/companyText"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/jobLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobCompanyTextView"
        android:text="@string/jobLocText"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/jobDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/jobPostedDateText"
        android:textColor="#9e9e9e" />

</RelativeLayout>